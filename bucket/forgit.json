{
    "version": "25.12.0",
    "description": "A utility tool powered by fzf for using git interactively.",
    "homepage": "https://github.com/wfxr/forgit",
    "license": "MIT",
    "notes": "Recommend adding bash.exe from the manifest main/git to the top of the system environment's PATH.",
    "architecture": {
        "64bit": {
            "url": "https://github.com/wfxr/forgit/releases/download/25.12.0/forgit-25.12.0.tar.gz",
            "hash": "bb6aab32c2870ea98376d122e80bef9248258990b010a4b5256d785d8b62b2d2"
        }
    },
    "extract_dir": "bin",
    "pre_install": [
        "New-Item -Path \"$dir\\forgit.cmd\" -ItemType File -Force",
        "Add-Content -Path \"$dir\\forgit.cmd\" -Value \"bash $env:SCOOP\\apps\\forgit\\current\\git-forgit %*\""
    ],
    "bin": "forgit.cmd",
    "checkver": "github",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/wfxr/forgit/releases/download/$version/forgit-$version.tar.gz"
            }
        }
    }
}
